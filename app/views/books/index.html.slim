#books_index
  table.books-list.table.index-table.is-striped.is-narrow.is-bordered
    thead
      tr
        th Авторы
        th Название
        th # изданий
        th Действия
    tbody
      - @books.each do |book|
        tr
          td == links_to_authors(book.authors)
          td => link_to "\"#{book.title}\"", edit_book_path(book)
          td = book.editions.size
          td = link_to t('actions.remove'), book_path(book), method: :delete
    tfoot
      tr
        th Авторы
        th Название
        th # изданий
        th Действия
  ul
  = link_to t('books.add_new'), new_book_path
