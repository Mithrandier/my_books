.book-fields.nested-fields.row
  = f.input :title, label: false,
    input_html: {\
      data: { autocomplete: true, values: all_book_titles }\
    }, wrapper_html: { class: 'col-xs-5' }
  = f.input :author, label: false,
    input_html: {\
      data: { autocomplete: true, values: all_book_authors }\
    }, wrapper_html: { class: 'col-xs-5' }
  = link_to_remove_association 'remove', f, class: 'link-to-remove-book col-xs-2'
